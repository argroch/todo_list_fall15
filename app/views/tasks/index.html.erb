<div class="row">

	<div class="col-md-3">
		<%= link_to new_task_path, remote: true do %>
			<button class="btn btn-info">
				<span class="glyphicon glyphicon-plus"></span> Add Task
			</button>
		<% end %>

		<div id="task-form" style="display:none;"></div>
	</div>

	<div class="col-md-8 col-md-offset-1">
		<h2>Listing Tasks</h2>
		<div id="tasks">
		  <div class="row">
		    <%= render @tasks %>
		  </div>
		</div>
	</div>

</div>